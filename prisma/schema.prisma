generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  CRIADOR
  COMUM
}
model Usuario {
  id String @id @default (auto()) @map("_id") @db.ObjectId
  nome      String
  dataNascimento DateTime
  email     String   @unique
  senha     String
  role      Role
  eventos   Evento[]
}

model Evento {
  id String @id @default (auto()) @map("_id") @db.ObjectId
  nome        String
  data        DateTime
  horario     String
  maxPessoas  Int
  tipo        String
  descricao   String
  local   String
  endereco    String
  numero      Int
  bairro      String
  cidade      String
  uf          String
  complemento String?
  imagem      String?
  criadorId   String   @db.ObjectId
  criador     Usuario  @relation(fields: [criadorId], references: [id])
}

